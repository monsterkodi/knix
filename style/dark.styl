widgetHeaderSize        = 20px
widgetTitleFontSize     = widgetHeaderSize - 6px

widgetBorderWidth         = 2px
widgetBorderWidthSelected = 2px
sliderBorderWidth       = widgetBorderWidth
scrollBorderWidth       = sliderBorderWidth
widgetTopRadius         = (widgetHeaderSize) * 0.5 + widgetBorderWidth
widgetBotRadius         = widgetTopRadius

borders                 = {}
borders.bg              = widgetBorderWidth solid borderColors.widget
