valueHeight             = 20px
knobSize                = valueHeight - sliderBorderWidth * 2
spinnerKnobSize         = 4px
spinKnobHeight          = 4px
spinKnobWidth           = 8px
shadowDef               = 2px 2px 10px rgba(0,0,0,0.4)
shadowInnerDef          = inset 1px 1px 6px rgba(0,0,0,0.4)

::-moz-selection
    background:     colors.spin-active
    color:          black

.content .button
    box-shadow:         1px 1px 2px 0px rgba(0,0,0,0.4)

.spin-input
    text-shadow:        rgba(0,0,0,0.5) 1px 1px 4px

.slider-bar
    box-shadow:         1px 0px 6px 0px rgba(0,0,0,0.4)

.slider
.spin-table
    -webkit-box-shadow: shadowInnerDef
    box-shadow:         shadowInnerDef

.spinner-knob
    border-bottom-left-radius:  spinnerKnobSize
    border-bottom-right-radius: spinnerKnobSize
.spin-knob
    border-top-left-radius:  spinKnobHeight
    border-top-right-radius: spinKnobHeight
